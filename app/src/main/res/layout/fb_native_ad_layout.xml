<?xml version="1.0" encoding="utf-8"?>

<com.facebook.ads.NativeAdLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fb_NativeAdvanced_ad_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@drawable/background_note"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:riv_corner_radius_top_left="@dimen/_10sdp"
            app:riv_corner_radius_top_right="@dimen/_10sdp"
            tools:ignore="MissingPrefix">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/ColorYellow"
                android:text="Ad"
                app:riv_corner_radius_top_left="10dp"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/fb_Ad_Headline_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:fontFamily="@font/ubuntu_bold"
                android:includeFontPadding="false"
                android:text="Ad Headline"
                android:textColor="@color/ColorWhite"
                android:textSize="@dimen/_10ssp" />




        </LinearLayout>


     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="horizontal">

        <TextView
            android:id="@+id/fb_sponsored_tag_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="Sponsored"
            android:textColor="@color/ColorYellow" />

        <LinearLayout
            android:id="@+id/fb_ad_choices_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textColor="@color/ColorWhite"
            android:layout_gravity="end"/>

     </LinearLayout>
        <com.facebook.ads.MediaView
            android:id="@+id/fb_Ad_Mediaview_id"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:adjustViewBounds="true"
            app:riv_corner_radius_top_left="@dimen/_10sdp"
            app:riv_corner_radius_top_right="@dimen/_10sdp" />

        <TextView
            android:id="@+id/fb_Ad_SocialContext_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:fontFamily="@font/ubuntu_regular"
            android:includeFontPadding="false"
            android:text="Social Context"
            android:textColor="@color/ColorNoteSubtitleText"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/fb_Advertiser_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:fontFamily="@font/ubuntu_regular"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="Advertiser"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_9ssp"
            android:visibility="visible" />


        <TextView
            android:id="@+id/fb_AdBody_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:fontFamily="@font/ubuntu_regular"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="Body of the Ad"

            android:textSize="@dimen/_11ssp"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/fb_Call_to_Action_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_14sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:background="@color/ColorNote4"
                android:fontFamily="@font/ubuntu_bold"
                android:includeFontPadding="false"
                android:padding="@dimen/_1sdp"
                android:text="Learn More"
                android:textColor="@color/ColorNoteSubtitleText"
                android:textSize="@dimen/_10ssp"
                android:maxLines="1"/>


        </LinearLayout>


    </LinearLayout>

</com.facebook.ads.NativeAdLayout>